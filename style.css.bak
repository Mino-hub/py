}
.postlist-cat-div div a{
    font-size:0.7em;
    color:#fefeff;
    text-decoration:none;
}
.postlist-wrap{
    width:100%;
    padding:20px 10px 10px 10px;
    float:left;
}
.postlist-title-a{
    width:80%;
    padding:0 5px 5px 0;
    display:block;
    font-size:0.9em;
    line-height:150%;
    text-decoration:none;
    color:#000a2a;
    float:left;
}
.postlist-img-a{
    width:20%;
    display:block;
    float:left;
}
.postlist-img-a img{
    width:100%;
    height:auto;
    float:left;
}

